<div>
  <h1>Your Dashboard</h1>
</div>

<div>
  <button id="new-post">+ New Post</button>
</div>

{{#each blogs as |blog|}}
  <div class="card">
    <a href="/user/blog/{{blog.id}}" class="blog-item" data-id="{{blog.id}}">
      <p>{{blog.title}}</p>
      <p>{{format_date blog.date_created}}</p>
    </a>
  </div>
{{/each}}

<script src="/js/dashboard.js"></script>