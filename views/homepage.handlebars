<div>
  <h1>The Tech Blog</h1>
</div>

{{#each blogs as |blog|}}
  <section class="card">
    <a href="/blog/{{blog.id}}">
      <div>
        <h2>{{blog.title}}</h2>
        <h3>Posted by
          {{blog.user.username}}
          on
          {{format_date blog.date_created}}
        <h3>
      </div>
      <div>
        <p>
          {{blog.content}}
        </p>
      </div>
    </a>
  </section>
{{/each}}

<script src="/js/homepage.js"></script>
