<div>
  <h1>The Tech Blog</h1>
</div>

<section class="card">
  <div>
    <h2>{{title}}</h2>
    <h3>Posted by {{user.username}} on {{format_date date_created}}<h3>
  </div>
  <div>
    <p>{{content}}</p>
  </div>
</section>

{{#each comments as |comment|}}
  <section class="card">
    <p>{{comment.comment_content}}</p>
    <p>â€”{{comment.user.username}}, {{format_date date_created}}</p>
  </section>
{{/each}}

{{#if logged_in}}
  <section class="card">
  <form action="#" method="post" id="comment-form">
    <div class="form-group">
      <label for="comment-content">Comment</label>
      <textarea id="comment-content" name="comment_content" required></textarea>
    </div>
    <button type="submit" id="comment-button">Submit</button>
  </form>
</section>
{{/if}}


<script src="/js/blog.js"></script>
